<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>{{{ title }}}</title>
    <link rel="stylesheet" href="/static/css/style.css">
</head>
<body>
    <main>
    {{#each instructions}}
        <h2>{{this.name}}</h2>
        <table>
            {{!-- {{#if this.key}}
                <tr>
                    <th>Key</th> 
                    <td>
                        <a href="{{this.key}}">{{this.key}}</a>
                    </td>
                </tr>
            {{/if}} --}}
            {{#if this.source}}
                <tr>
                    <th>Source</th> 
                    <td>
                        {{this.source}}
                    </td>
                </tr>
            {{/if}}
            {{#if this.proxy}}
                <tr>
                    <th>Proxy</th> 
                    <td>
                        {{this.proxy}}
                    </td>
                </tr>
            {{/if}}
            {{#if this.example}}
                <tr>
                    <th>Proxy Example</th> 
                    <td>
                        <a href="{{this.example}}">{{this.example}}</a>
                    </td>
                </tr>
            {{/if}}
        </table>
    {{/each}}
    </main>
</body>
</html>